@model PrintByRoomModel
    <div class="slim-pageheader pd-10">
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item active">مهمان</li>
            <li class="breadcrumb-item active" aria-current="page">چاپ بل بر اساس شماره اتاق</li>

        </ol>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong class="text-info">معلومات!</strong> @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
    }
    <div class="card">
        <h3 class="card-title">چاپ بل براساس شماره اتاق</h3>
        <div class="card-body">
            <form method="post" asp-action="PrintByRoom" asp-controller="Customer">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="@Model.Room"></label>
                        <input asp-for="@Model.Room" name="Room" class="form-control" autocomplete="off" />
                        <span asp-validation-for="@Model.Room" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary fe fe-24 fe-save" value="جستجو" />
            </form>
        </div>
    </div>