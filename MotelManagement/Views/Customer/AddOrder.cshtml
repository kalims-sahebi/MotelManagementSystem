@model CustomerViewModel






<div class="card shadow">
    <div class="card-body">
        <div class="modal fade" id="OrderModal" tabindex="-1" role="dialog" aria-labelledby="varyModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="varyModalLabel">سفارش نوشیدنی و غذا</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.FoodCount"></label>
                                <input asp-for="@Model.FoodCount" name="FoodCount" id="FoodCount" class="form-control" autocomplete="off" />
                                <span asp-validation-for="@Model.FoodCount" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.FoodId"></label>
                                <a href="#" title="افزودن غذای جدید" data-toggle="modal" data-target="#NewFoodModal"><span>..<i class="fe fe-16 fe-plus-circle " style="color: turquoise "></i></span></a>
                                <select asp-items="@Model.FoodList" name="FoodId" id="FoodId" class="form-control select2">
                                   
                                </select>
                                <span asp-validation-for="@Model.FoodId" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.DrinkCount"></label>
                                <input asp-for="@Model.DrinkCount" name="DrinkCount" id="DrinkCount" class="form-control" autocomplete="off" />
                                <span asp-validation-for="@Model.DrinkCount" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.DrinkId"></label>
                                <a href="#" title="افزودن نوشیدنی جدید" data-toggle="modal" data-target="#NewDrinkModal"><span>..<i class="fe fe-16 fe-plus-circle " style="color: turquoise "></i></span></a>
                                <select asp-items="@Model.DrinkList" name="DrinkId" id="DrinkId" class="form-control select2">
                                   
                                </select>
                                <span asp-validation-for="@Model.DrinkId" class="text-danger"></span>
                            </div>
                        </div>

                        <div asp-validation-summary="All" class="text-danger">

                        </div>
                    </div>
                    <div class="modal-footer" style="direction:ltr" >
                        <button type="button" class="btn btn-danger fe fe-16 fe-x-square" data-dismiss="modal"> لغو</button>
                        <button type="button" id="btnAddOrder" class="btn btn-primary fe fe-24 fe-save mr-1" data-dismiss="modal"> ثبت</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("AddNewFood")
    @await Html.PartialAsync("AddNewDrink")
</div>

@section scripts{
    <script>
        $(document).ready(function () {

        });
        
    </script>
}