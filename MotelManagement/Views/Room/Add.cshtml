@model RoomModel

    <div class="slim-pageheader pd-10">
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item active">افزودن</li>
            <li class="breadcrumb-item active" aria-current="page">اتاق</li>

        </ol>
    </div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong class="text-info">معلومات!</strong> @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}



<div class="card shadow mb-4">
    <div class="card-header">
        <strong class="card-title">اتاق جدید</strong>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Add" asp-controller="Room">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="@Model.RoomNumber"></label>
                    <input asp-for="@Model.RoomNumber" name="RoomNumber" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.RoomNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@Model.IsEmpty"></label>
                    <select name="IsEmpty" class="form-control">
                        <option value="1">اختصاص شده</option>
                        <option selected value="0">خالی</option>
                    </select>
                    <span asp-validation-for="@Model.IsEmpty" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@Model.RoomLocation"></label>
                    <input asp-for="@Model.RoomLocation" name="RoomLocation" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.RoomLocation" class="text-danger"></span>
                </div>
               
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="@Model.BedCount"></label>
                    <input name="BedCount" type="number" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.BedCount" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@Model.RoomTypeId"></label>
                    <select asp-items="@Model.RoomTypeList" name="RoomTypeId" class="form-control"></select>
                    <span asp-validation-for="@Model.RoomTypeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="@Model.RentPerNight"></label>
                    <input asp-for="@Model.RentPerNight" name="RentPerNight" class="form-control" autocomplete="off" />
                    <span asp-validation-for="@Model.RentPerNight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div asp-validation-summary="All" class="text-danger">

                </div>
            </div>
            <button type="submit" class="btn btn-primary fe fe-24 fe-save"> ثبت</button>
            <a asp-action="Add" asp-controller="Room" class="btn btn-danger fe fe-16 fe-x-square"> لغو</a>
        </form>
    </div>
</div>




